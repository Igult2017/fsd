import React, { useState, useEffect } from 'react';
import { 
  Camera, 
  TrendingUp, 
  BarChart2, 
  Brain, 
  Target, 
  ShieldCheck,
  ChevronRight,
  ChevronLeft,
  Save,
  Zap,
  Activity,
  History,
  Layout,
  MousePointer2,
  Gauge,
  Clock,
  AlertTriangle,
  RefreshCcw,
  CheckCircle2,
  DollarSign,
  Calendar,
  Timer,
  Trash2,
  RotateCcw
} from 'lucide-react';

const INITIAL_FORM_STATE = {
  // Step 1: Core Trade Data
  screenshot: null,
  screenshotTimestamp: '',
  instrument: '',
  direction: 'Long',
  lotSize: '',
  entryPrice: '',
  stopLoss: '',
  stopLossDistancePips: '',
  takeProfit: '',
  takeProfitDistancePips: '',
  entryTime: '',
  exitTime: '',
  tradeDuration: '',
  dayOfWeek: 'Monday',
  outcome: 'Win',
  profitLoss: '',
  accountBalance: '',
  orderType: 'Market',
  riskPercent: '',

  // Step 2: Market Environment & Setup
  marketRegime: 'Trending',
  trendDirection: 'Bullish',
  volatilityState: 'Normal',
  liquidity: 'High',
  newsEnvironment: 'Clear',
  entryTimeUTC: '',
  sessionPhase: 'Open',
  sessionName: 'London',
  timingContext: 'Impulse',
  candlePattern: '',
  indicatorState: '',
  marketAlignment: 3,
  setupClarity: 3,
  entryPrecision: 3,
  confluence: 3,
  timingQuality: 3,
  primarySignals: '',
  secondarySignals: '',
  keyLevelRespect: 'Yes',
  keyLevelType: 'Support',
  momentumValidity: 'Strong',
  targetLogicClarity: 'High',

  // Step 3: Advanced Metrics & Execution
  plannedEntry: '',
  plannedSL: '',
  plannedTP: '',
  actualEntry: '',
  actualSL: '',
  actualTP: '',
  pipsGainedLost: '',
  mae: '',
  mfe: '',
  monetaryRisk: '',
  potentialReward: '',
  plannedRR: '',
  achievedRR: '',
  riskHeat: 'Low',
  entryMethod: 'Market',
  exitStrategy: '',
  breakEvenApplied: false,
  managementType: 'Rule-based',
  
  // Psychology & Discipline
  confidenceLevel: 3,
  emotionalState: 'Calm',
  focusStressLevel: 'Low',
  rulesFollowed: 100,
  worthRepeating: true,
  whatWorked: '',
  whatFailed: '',
  adjustments: '',
  notes: ''
};

const App = () => {
  const [step, setStep] = useState(1);
  const [formData, setFormData] = useState(INITIAL_FORM_STATE);
  const [showResetConfirm, setShowResetConfirm] = useState(false);

  useEffect(() => {
    const link = document.createElement('link');
    link.href = 'https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800;900&display=swap';
    link.rel = 'stylesheet';
    document.head.appendChild(link);
    return () => document.head.removeChild(link);
  }, []);

  const updateField = (field, value) => {
    setFormData(prev => ({ ...prev, [field]: value }));
  };

  const handleFileUpload = (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onloadend = () => {
        updateField('screenshot', reader.result);
      };
      reader.readAsDataURL(file);
    }
  };

  const resetForm = () => {
    setFormData(INITIAL_FORM_STATE);
    setStep(1);
    setShowResetConfirm(false);
  };

  const nextStep = () => setStep(s => Math.min(3, s + 1));
  const prevStep = () => setStep(s => Math.max(1, s - 1));

  const SectionHeader = ({ icon: Icon, title }) => (
    <div className="flex items-center gap-3 mb-6">
      <div className="p-2 bg-blue-500/10 rounded-lg">
        <Icon className="w-5 h-5 text-blue-400" />
      </div>
      <h3 className="text-[11px] font-bold text-slate-200 uppercase tracking-widest">
        {title}
      </h3>
      <div className="flex-grow h-px bg-slate-800 ml-2" />
    </div>
  );

  const InputField = ({ label, field, type = "text", placeholder = "" }) => (
    <div className="flex flex-col gap-2">
      <label className="text-[9px] font-bold text-slate-500 uppercase tracking-widest">{label}</label>
      <input
        type={type}
        className="w-full px-4 py-3 rounded-xl border border-slate-800 bg-slate-900/50 text-slate-200 focus:border-blue-500/50 focus:ring-4 focus:ring-blue-500/10 outline-none transition-all text-sm font-bold placeholder:text-slate-700"
        placeholder={placeholder}
        value={formData[field]}
        onChange={(e) => updateField(field, e.target.value)}
      />
    </div>
  );

  const SelectField = ({ label, field, options }) => (
    <div className="flex flex-col gap-2">
      <label className="text-[9px] font-bold text-slate-500 uppercase tracking-widest">{label}</label>
      <div className="relative">
        <select
          className="w-full px-4 py-3 rounded-xl border border-slate-800 bg-slate-900/50 text-slate-200 focus:border-blue-500/50 outline-none transition-all text-sm font-bold appearance-none cursor-pointer"
          value={formData[field]}
          onChange={(e) => updateField(field, e.target.value)}
        >
          {options.map(opt => <option key={opt} value={opt} className="bg-slate-900">{opt}</option>)}
        </select>
        <div className="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500">
          <ChevronRight className="w-4 h-4 rotate-90" />
        </div>
      </div>
    </div>
  );

  const ScoreSlider = ({ label, field }) => (
    <div className="space-y-3">
      <div className="flex justify-between items-center">
        <label className="text-[9px] font-bold text-slate-500 uppercase tracking-widest">{label}</label>
        <span className="text-[10px] font-bold px-2 py-1 bg-blue-500/10 text-blue-400 rounded-md border border-blue-500/20">{formData[field]} / 5</span>
      </div>
      <input
        type="range"
        min="1"
        max="5"
        className="w-full h-1.5 bg-slate-800 rounded-full appearance-none cursor-pointer accent-blue-500"
        value={formData[field]}
        onChange={(e) => updateField(field, parseInt(e.target.value))}
      />
    </div>
  );

  return (
    <div className="min-h-screen bg-[#0f172a] p-4 md:p-10 font-['Montserrat'] font-bold text-slate-300">
      <div className="max-w-6xl mx-auto bg-slate-900/40 backdrop-blur-xl rounded-[2.5rem] border border-slate-800 shadow-2xl overflow-hidden flex flex-col md:flex-row min-h-[85vh]">
        
        {/* Left Sidebar Info */}
        <div className="md:w-72 bg-slate-950/40 p-8 border-r border-slate-800 flex flex-col justify-between shrink-0">
          <div>
            <div className="flex items-center gap-3 mb-12">
              <div className="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-600/20">
                <History className="text-white w-6 h-6" />
              </div>
              <h1 className="text-xl font-extrabold tracking-tighter text-white">TRD.LOG</h1>
            </div>

            <nav className="space-y-2">
              {[
                { id: 1, label: 'Core Data', icon: BarChart2 },
                { id: 2, label: 'Environment', icon: TrendingUp },
                { id: 3, label: 'Advanced Metrics', icon: Target },
              ].map((item) => (
                <button
                  key={item.id}
                  onClick={() => setStep(item.id)}
                  className={`w-full flex items-center gap-4 px-4 py-4 rounded-2xl text-sm font-semibold transition-all ${
                    step === item.id 
                    ? 'bg-blue-600 text-white shadow-xl shadow-blue-600/20' 
                    : 'text-slate-500 hover:text-slate-300 hover:bg-slate-800/50'
                  }`}
                >
                  <item.icon className="w-5 h-5" />
                  {item.label}
                </button>
              ))}
            </nav>
          </div>

          <div className="space-y-3 pt-8">
            {showResetConfirm ? (
              <div className="bg-rose-500/10 border border-rose-500/20 p-4 rounded-2xl animate-in zoom-in-95 duration-200">
                <p className="text-[10px] text-rose-400 uppercase text-center mb-3">Confirm Reset?</p>
                <div className="flex gap-2">
                  <button onClick={resetForm} className="flex-1 py-2 bg-rose-600 text-white text-[10px] rounded-lg hover:bg-rose-500 transition-colors">Yes</button>
                  <button onClick={() => setShowResetConfirm(false)} className="flex-1 py-2 bg-slate-800 text-slate-300 text-[10px] rounded-lg">No</button>
                </div>
              </div>
            ) : (
              <button 
                onClick={() => setShowResetConfirm(true)}
                className="w-full flex items-center justify-center gap-2 p-4 bg-slate-950/80 rounded-2xl border border-slate-800 hover:border-rose-500/50 hover:bg-rose-500/5 transition-all group cursor-pointer"
              >
                <RotateCcw className="w-4 h-4 text-slate-500 group-hover:text-rose-400" />
                <span className="text-[10px] font-bold text-slate-500 uppercase tracking-widest group-hover:text-rose-400">Reset Form</span>
              </button>
            )}
          </div>
        </div>

        {/* Main Content Area */}
        <div className="flex-1 flex flex-col overflow-hidden">
          <div className="p-8 md:p-12 overflow-y-auto">
            
            <header className="mb-10 flex justify-between items-end">
              <div>
                <h2 className="text-3xl font-extrabold text-white tracking-tight">
                  {step === 1 ? '1. Core Trade Data' : step === 2 ? '2. Environment & Context' : '3. Advanced Review'}
                </h2>
                <p className="text-slate-500 text-sm mt-1">
                  {step === 1 ? 'Position fundamentals and chart evidence' : step === 2 ? 'Qualitative scoring and market timing' : 'Risk actuals, psychology, and optimization'}
                </p>
              </div>
              <div className="text-slate-800 text-7xl font-black italic select-none opacity-50 hidden sm:block">0{step}</div>
            </header>

            {/* STEP 1: CORE DATA */}
            {step === 1 && (
              <div className="space-y-10 animate-in fade-in slide-in-from-bottom-4 duration-500">
                <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <div className="md:col-span-3">
                    <div className={`relative group overflow-hidden rounded-3xl border-2 transition-all cursor-pointer ${formData.screenshot ? 'border-blue-500/50 bg-slate-900' : 'border-dashed border-slate-800 bg-slate-950/40 hover:border-blue-500/50'}`}>
                      <input type="file" className="hidden" id="chart-upload" onChange={handleFileUpload} accept="image/*" />
                      {formData.screenshot ? (
                        <div className="relative group">
                          <img src={formData.screenshot} alt="Trade Evidence" className="w-full h-auto max-h-[400px] object-contain rounded-2xl" />
                          <div className="absolute inset-0 bg-slate-950/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-4">
                            <label htmlFor="chart-upload" className="p-3 bg-blue-600 rounded-xl cursor-pointer hover:bg-blue-500 transition-colors">
                              <RefreshCcw className="w-5 h-5 text-white" />
                            </label>
                            <button onClick={() => updateField('screenshot', null)} className="p-3 bg-rose-600 rounded-xl hover:bg-rose-500 transition-colors">
                              <Trash2 className="w-5 h-5 text-white" />
                            </button>
                          </div>
                        </div>
                      ) : (
                        <label htmlFor="chart-upload" className="flex flex-col items-center justify-center p-10 cursor-pointer">
                          <div className="w-14 h-14 bg-slate-900 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 group-hover:bg-blue-600/10 transition-all border border-slate-800">
                            <Camera className="w-6 h-6 text-slate-500 group-hover:text-blue-500" />
                          </div>
                          <span className="text-sm font-bold text-slate-300">Trade Screenshot</span>
                          <span className="text-[9px] text-slate-600 font-bold uppercase tracking-widest mt-1">Attach Chart Evidence</span>
                        </label>
                      )}
                    </div>
                  </div>

                  <InputField label="Shot Timestamp" field="screenshotTimestamp" type="time" />
                  <InputField label="Instrument / Pair" field="instrument" placeholder="e.g. EURUSD, XAUUSD" />
                  <SelectField label="Direction" field="direction" options={['Long', 'Short']} />
                  
                  <InputField label="Entry Date/Time" field="entryTime" type="datetime-local" />
                  <InputField label="Exit Date/Time" field="exitTime" type="datetime-local" />
                  <SelectField label="Day of Week" field="dayOfWeek" options={['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']} />
                  
                  <InputField label="Trade Duration" field="tradeDuration" placeholder="e.g. 2h 30m, 45m" />
                  <InputField label="Lot Size / Units" field="lotSize" placeholder="0.01" />
                  <SelectField label="Order Type" field="orderType" options={['Market', 'Limit', 'Stop', 'Stop-Limit']} />
                  
                  <InputField label="Entry Price" field="entryPrice" type="number" placeholder="0.00000" />
                  <InputField label="Stop-Loss Price" field="stopLoss" type="number" placeholder="0.00000" />
                  <InputField label="SL Distance (Pips)" field="stopLossDistancePips" type="number" placeholder="0" />
                  
                  <InputField label="Take-Profit Price" field="takeProfit" type="number" placeholder="0.00000" />
                  <InputField label="TP Distance (Pips)" field="takeProfitDistancePips" type="number" placeholder="0" />
                  <InputField label="Risk % Per Trade" field="riskPercent" type="number" placeholder="1.0" />
                  
                  <InputField label="Monetary Risk ($)" field="monetaryRisk" type="number" placeholder="0.00" />
                  <InputField label="Potential Reward ($)" field="potentialReward" type="number" placeholder="0.00" />
                  <InputField label="Risk-Reward Ratio" field="plannedRR" placeholder="1:2" />
                  
                  <SelectField label="Outcome" field="outcome" options={['Win', 'Loss', 'BE (Break Even)']} />
                  <InputField label="Pips Gained/Lost" field="pipsGainedLost" type="number" placeholder="0" />
                  <InputField label="P/L ($)" field="profitLoss" type="number" placeholder="0.00" />
                </div>
              </div>
            )}

            {/* STEP 2: ENVIRONMENT & SETUP */}
            {step === 2 && (
              <div className="space-y-12 animate-in fade-in slide-in-from-right-4 duration-500">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-12">
                  <div className="space-y-8">
                    <SectionHeader icon={TrendingUp} title="Market Context" />
                    <div className="grid grid-cols-2 gap-4">
                      <SelectField label="Market Regime" field="marketRegime" options={['Trending', 'Ranging']} />
                      <SelectField label="Trend Direction" field="trendDirection" options={['Bullish', 'Bearish', 'Sideways']} />
                      <SelectField label="Volatility State" field="volatilityState" options={['Low', 'Normal', 'High']} />
                      <SelectField label="Liquidity" field="liquidity" options={['Low', 'Normal', 'High']} />
                      <SelectField label="News Environment" field="newsEnvironment" options={['Clear', 'Medium', 'High']} />
                    </div>
                    
                    <SectionHeader icon={Clock} title="Timing & Phase" />
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <InputField label="Entry Time (UTC)" field="entryTimeUTC" type="time" />
                      <SelectField label="Session Name" field="sessionName" options={['Sydney', 'Tokyo', 'London', 'New York', 'Overlap']} />
                      <SelectField label="Session Phase" field="sessionPhase" options={['Open', 'Mid', 'Close']} />
                      <SelectField label="Timing Context" field="timingContext" options={['Impulse', 'Pullback']} />
                    </div>

                    <SectionHeader icon={Activity} title="Technical Setup" />
                    <div className="grid grid-cols-1 gap-4">
                      <InputField label="Candle Pattern at Entry" field="candlePattern" placeholder="e.g. Engulfing, Pin Bar, Doji" />
                      <InputField label="Indicator State" field="indicatorState" placeholder="e.g. MACD bullish crossover, RSI >70" />
                    </div>
                  </div>

                  <div className="space-y-8">
                    <SectionHeader icon={Gauge} title="Quality Scores (1-5)" />
                    <div className="space-y-5 p-6 bg-slate-950/40 rounded-3xl border border-slate-800">
                      <ScoreSlider label="Market Alignment" field="marketAlignment" />
                      <ScoreSlider label="Setup Clarity" field="setupClarity" />
                      <ScoreSlider label="Entry Precision" field="entryPrecision" />
                      <ScoreSlider label="Confluence" field="confluence" />
                      <ScoreSlider label="Timing Quality" field="timingQuality" />
                    </div>
                  </div>
                </div>

                <div className="p-8 bg-blue-600/5 rounded-[2.5rem] border border-blue-500/10">
                  <SectionHeader icon={Zap} title="Technical Signals & Levels" />
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <InputField label="Primary Signals" field="primarySignals" placeholder="List your main triggers..." />
                    <InputField label="Secondary Signals" field="secondarySignals" placeholder="Additional confirmations..." />
                    <SelectField label="Key Level Respect" field="keyLevelRespect" options={['Yes', 'No', 'Partial']} />
                    <SelectField label="Key Level Type" field="keyLevelType" options={['Support', 'Resistance', 'Supply Zone', 'Demand Zone', 'Pivot', 'Fibonacci']} />
                    <SelectField label="Momentum Validity" field="momentumValidity" options={['Strong', 'Waning', 'Flat']} />
                    <SelectField label="Target Logic Clarity" field="targetLogicClarity" options={['High', 'Medium', 'Low']} />
                  </div>
                </div>
              </div>
            )}

            {/* STEP 3: ADVANCED REVIEW */}
            {step === 3 && (
              <div className="space-y-12 animate-in fade-in slide-in-from-right-4 duration-500">
                <div className="space-y-6">
                  <SectionHeader icon={BarChart2} title="Execution vs Planned" />
                  <div className="grid grid-cols-2 md:grid-cols-6 gap-4">
                    <div className="md:col-span-2 space-y-4">
                      <InputField label="Planned Entry" field="plannedEntry" />
                      <InputField label="Actual Entry" field="actualEntry" />
                    </div>
                    <div className="md:col-span-2 space-y-4">
                      <InputField label="Planned SL" field="plannedSL" />
                      <InputField label="Actual SL" field="actualSL" />
                    </div>
                    <div className="md:col-span-2 space-y-4">
                      <InputField label="Planned TP" field="plannedTP" />
                      <InputField label="Actual TP" field="actualTP" />
                    </div>
                  </div>
                </div>

                <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                  <div className="md:col-span-2 space-y-8">
                    <SectionHeader icon={MousePointer2} title="Risk Management" />
                    <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
                      <InputField label="Planned RR" field="plannedRR" placeholder="1:2" />
                      <InputField label="Achieved RR" field="achievedRR" placeholder="1:1.5" />
                      <SelectField label="Risk Heat Level" field="riskHeat" options={['Low', 'Medium', 'High']} />
                    </div>

                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <SelectField label="Entry Method" field="entryMethod" options={['Market', 'Limit']} />
                      <InputField label="Exit Strategy" field="exitStrategy" placeholder="e.g., Trailing stop, Target hit..." />
                      <SelectField label="Management Type" field="managementType" options={['Rule-based', 'Discretionary']} />
                      <div className="flex items-center justify-between p-4 bg-slate-950/40 rounded-2xl border border-slate-800">
                        <div className="flex items-center gap-3">
                          <ShieldCheck className="w-5 h-5 text-emerald-500" />
                          <span className="text-xs font-bold text-white uppercase tracking-tighter">Break-Even Protocol</span>
                        </div>
                        <button 
                          onClick={() => updateField('breakEvenApplied', !formData.breakEvenApplied)}
                          className={`w-12 h-6 rounded-full transition-all relative ${formData.breakEvenApplied ? 'bg-emerald-600' : 'bg-slate-800'}`}
                        >
                          <div className={`absolute top-1 w-4 h-4 bg-white rounded-full transition-all ${formData.breakEvenApplied ? 'left-7' : 'left-1'}`} />
                        </button>
                      </div>
                    </div>
                  </div>

                  <div className="p-8 bg-slate-950/40 rounded-[2.5rem] border border-slate-800 space-y-8">
                    <SectionHeader icon={Brain} title="Psychology & Discipline" />
                    <ScoreSlider label="Confidence Level" field="confidenceLevel" />
                    <SelectField label="Emotional State" field="emotionalState" options={['Calm', 'Anxious', 'Aggressive', 'FOMO', 'Neutral']} />
                    <SelectField label="Focus/Stress Level" field="focusStressLevel" options={['Low', 'Moderate', 'High']} />
                    <InputField label="% Rules Followed" field="rulesFollowed" type="number" />
                    
                    <div className={`p-6 rounded-2xl border-2 transition-all cursor-pointer group ${formData.worthRepeating ? 'bg-emerald-500/5 border-emerald-500/20' : 'bg-rose-500/5 border-rose-500/20'}`}
                      onClick={() => updateField('worthRepeating', !formData.worthRepeating)}>
                      <p className="text-[9px] font-black uppercase text-center tracking-widest text-slate-500 mb-2">Optimization Toggle</p>
                      <div className="flex items-center justify-center gap-2">
                        {formData.worthRepeating ? <CheckCircle2 className="w-4 h-4 text-emerald-500" /> : <AlertTriangle className="w-4 h-4 text-rose-500" />}
                        <p className={`text-center font-bold text-xs uppercase ${formData.worthRepeating ? 'text-emerald-400' : 'text-rose-400'}`}>
                          {formData.worthRepeating ? 'Worth Repeating' : 'Avoid Setup'}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <div className="space-y-6">
                  <SectionHeader icon={RefreshCcw} title="Review & Optimization" />
                  <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div className="space-y-2">
                      <label className="text-[9px] font-black text-slate-500 uppercase tracking-widest">What Worked?</label>
                      <textarea className="w-full p-4 rounded-2xl bg-slate-950/50 border border-slate-800 text-slate-300 text-xs font-semibold outline-none focus:border-blue-500/30" rows="3" value={formData.whatWorked} onChange={(e) => updateField('whatWorked', e.target.value)} />
                    </div>
                    <div className="space-y-2">
                      <label className="text-[9px] font-black text-slate-500 uppercase tracking-widest">What Failed?</label>
                      <textarea className="w-full p-4 rounded-2xl bg-slate-950/50 border border-slate-800 text-slate-300 text-xs font-semibold outline-none focus:border-rose-500/30" rows="3" value={formData.whatFailed} onChange={(e) => updateField('whatFailed', e.target.value)} />
                    </div>
                    <div className="space-y-2">
                      <label className="text-[9px] font-black text-slate-500 uppercase tracking-widest">Rules to Adjust</label>
                      <textarea className="w-full p-4 rounded-2xl bg-slate-950/50 border border-slate-800 text-slate-300 text-xs font-semibold outline-none focus:border-emerald-500/30" rows="3" value={formData.adjustments} onChange={(e) => updateField('adjustments', e.target.value)} />
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>

          {/* Footer Controls */}
          <footer className="p-8 border-t border-slate-800 bg-slate-950/60 flex justify-between items-center mt-auto shrink-0">
            <button
              onClick={prevStep}
              className={`flex items-center gap-2 px-6 py-3 rounded-xl font-bold text-[10px] uppercase tracking-widest transition-all ${step === 1 ? 'opacity-0 pointer-events-none' : 'text-slate-500 hover:text-white hover:bg-slate-800'}`}
            >
              <ChevronLeft className="w-4 h-4" /> Back
            </button>
            
            {step < 3 ? (
              <button
                onClick={nextStep}
                className="group flex items-center gap-3 px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white rounded-2xl font-bold text-[10px] uppercase tracking-widest shadow-xl shadow-blue-600/20 transition-all hover:-translate-y-0.5"
              >
                Next Section <ChevronRight className="w-4 h-4 group-hover:translate-x-1 transition-transform" />
              </button>
            ) : (
              <button
                onClick={() => {
                  console.log('Final Data:', formData);
                  alert('TRADE LOG COMMITTED.');
                }}
                className="flex items-center gap-3 px-10 py-4 bg-emerald-600 hover:bg-emerald-500 text-white rounded-2xl font-bold text-[10px] uppercase tracking-widest shadow-xl shadow-emerald-600/20 transition-all hover:-translate-y-0.5"
              >
                <Save className="w-4 h-4" /> Commit Trade Log
              </button>
            )}
          </footer>
        </div>
      </div>
    </div>
  );
};

export default App;
